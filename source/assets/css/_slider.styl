.slick-loading
  .slick-list
    background #fff url('../images/ajax-loader.gif') center center no-repeat

.slick-prev,
.slick-next
  font-size 0
  line-height 0
  position absolute
  top 50%
  display block
  width 20px
  height 20px
  margin-top -10px
  padding 0
  cursor pointer
  color transparent
  border none
  outline none
  background transparent

.slick-prev:hover,
.slick-prev:focus,
.slick-next:hover,
.slick-next:focus
  color transparent
  outline none
  background transparent

.slick-prev:hover:before,
.slick-prev:focus:before,
.slick-next:hover:before,
.slick-next:focus:before
  opacity 1

.slick-prev.slick-disabled:before,
.slick-next.slick-disabled:before
  opacity .25

.slick-prev:before,
.slick-next:before
  font-family 'slick'
  font-size 20px
  line-height 1
  opacity .75
  color white
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

